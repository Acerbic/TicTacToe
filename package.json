{
  "scripts": {
    "clean": "lerna run clean && lerna clean -y && rimraf node_modules",
    "deploy:dev:local": "bash ./deployment/deploy_dev_local.sh",
    "down:dev:local": "sudo docker-compose --file deployment/docker-compose-hasura-only.yml down",
    "deploy:dev": "bash ./deployment/deploy_dev.sh",
    "down:dev": "sudo docker-compose --file deployment/docker-compose-dev.yml down",
    "deploy": "deploy:prod",
    "deploy:prod": "echo ~Not Implemented~",
    "down:prod": "echo ~Not Implemented~",
    "start:client": "cross-env-shell GHOST_URL=http://localhost:3060 \"cd packages/client && yarn dev\"",
    "start:gmaster": "cross-env-shell HASURA_URL=http://localhost:8080/v1/graphql \"cd packages/gmaster && yarn start\"",
    "start:ghost": "cross-env-shell HASURA_URL=http://localhost:8080/v1/graphql GMASTER_URL=http://localhost:3000 JWT_SECRET=1234567 \"cd packages/ghost && yarn start\""
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "2.0.5",
    "rimraf": "^3.0.2",
    "cross-env": "^7.0.2"
  }
}
