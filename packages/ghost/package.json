{
  "name": "ghost",
  "version": "1.0.0",
  "description": "Game host. Backend module to communicate game between players (via sockets) and game master. An instance of game host is spawned for each game.",
  "author": "Gleb Varenov",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/server.js",
    "dev": "cross-env NODE_ENV=development DEBUG=*,-nodemon*,-engine*,-express*,-binding,-socket.io* concurrently -k \"nodemon --watch dist --exec \\\"node --inspect=0.0.0.0\\\" ./dist/server.js\" \"tsc --watch\"",
    "clean": "rimraf dist",
    "test": "cross-env JWT_SECRET=1234567 jest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "graphqurl": "^0.3.3",
    "isomorphic-unfetch": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "socket.io": "^2.3.0",
    "uuid": "^8.1.0",
    "xstate": "^4.10.0"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@trulyacerbic/ttt-apis": "*",
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/events": "^3.0.0",
    "@types/express": "^4.17.6",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.2.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.11",
    "@types/socket.io": "^2.1.5",
    "@types/uuid": "^8.0.0",
    "concurrently": "^5.3.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "socket.io-client": "^2.3.0",
    "ts-jest": "^26.0.0",
    "typescript": "4.0.3"
  }
}
