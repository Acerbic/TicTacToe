{
  "name": "ghost",
  "version": "1.0.0",
  "description": "Game host. Backend module to communicate game between players (via sockets) and game master. An instance of game host is spawned for each game.",
  "author": "Gleb Varenov",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "start": "cross-env DEBUG=*,-engine*,-express:router,-binding,-socket.io* node ./dist/server.js",
    "dev": "cross-env DEBUG=*,-engine*,-express*,-binding,-socket.io* node --inspect=0.0.0.0 ./dist/server.js",
    "clean": "rimraf dist",
    "test": "jest"
  },
  "dependencies": {
    "@trulyacerbic/ttt-gamesdb": "^1.0.16",
    "cross-env": "^7.0.2",
    "express": "^4.17.1",
    "isomorphic-unfetch": "^3.0.0",
    "socket.io": "^2.3.0",
    "xstate": "^4.8.0"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/events": "^3.0.0",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.2.2",
    "@types/socket.io": "^2.1.4",
    "jest": "^26.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.1",
    "typescript": "3.8.3"
  }
}
