{
    "compilerOptions": {
        "lib": ["es6", "esnext.asynciterable"],
        "skipLibCheck": true,
        "module": "commonjs",
        "allowJs": false,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "./src",
        "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["**/__mocks__/**"]
}
